{
    "require": {
        "symfony/symfony": "~2.6|~3.0",
        "symfony/monolog-bundle": "~3.0",
        "twig/extensions": "~1.0",
        "sensio/framework-extra-bundle": "~3.0,>=3.0.2",
        "jdorn/sql-formatter": "~1.2",
        "pomm-project/cli": "~2.0",
        "pomm-project/foundation": "~2.0",
        "pomm-project/model-manager": "~2.0",
        "pomm-project/pomm-symfony-bridge": "~2.2.1@dev"
    },
    "require-dev": {
        "behatch/contexts": "~2.0",
        "behat/mink-extension": "~2.2",
        "behat/mink-goutte-driver": "*"
    },
    "autoload": {
        "psr-0": { "AppBundle\\": "src/" },
        "classmap": [ "app/AppKernel.php" ],
        "psr-4": {
            "PommProject\\PommBundle\\": "../sources/lib/"
        }
    },
    "autoload-dev": {
        "files": ["tests/Features/bootstrap/FeatureContext.php"]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "symfony-assets-install": "relative"
    }
}
